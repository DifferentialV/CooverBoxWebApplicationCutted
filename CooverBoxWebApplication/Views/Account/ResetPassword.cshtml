@model CooverBoxWebApplication.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<form asp-action="ResetPassword" asp-controller="Account" asp-anti-forgery="true">
    <fieldset>
        <legend>Сброс пароля</legend>
        <div class="validation text-warning" asp-validation-summary="ModelOnly"></div>
        <input asp-for="Code" type="hidden" />
        <div class="form-group row">
            <label class="col-md-3 col-xs-12" asp-for="UserName"></label>
            <div class="col-md-9 col-xs-12">
                <input class="form-control" type="text" asp-for="UserName" />
            </div>
            <span class="col-md-12 col-xs-12 text-warning" asp-validation-for="UserName" />
        </div>
        <div class="form-group row ">
            <label class="col-md-3 col-xs-12" asp-for="Password"></label>
            <div class="col-md-9 col-xs-12">
                <input type="password" class="form-control" asp-for="Password" />
            </div>
            <span class="col-md-12 col-xs-12 text-warning" asp-validation-for="Password" />
        </div>
        <div class="form-group row ">
            <label class="col-md-3 col-xs-12" asp-for="ConfirmPassword"></label>
            <div class="col-md-9 col-xs-12">
                <input type="password" class="form-control" asp-for="ConfirmPassword" />
            </div>
            <span class="col-md-12 col-xs-12 text-warning" asp-validation-for="ConfirmPassword" />
        </div>
        <input class="btn btn-secondary" type="submit" value="Востановить пароль" />
    </fieldset>
</form>
@section scripts{
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}