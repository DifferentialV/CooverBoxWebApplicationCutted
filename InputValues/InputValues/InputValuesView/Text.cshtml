@model CooverBoxWebApplication.InputValues.InputValuesInfo.TextInputValue
@{
    Layout = null;

}
<div class="form-group col-auto row">
    <label class="control-label  col-md-3 col-xs-12" for="@Model.Name">@Model.DisplayName</label>
    <div class="col-md-9 col-xs-12">
        <input class="form-control valid" type="text" data-val="true"
               id=@Model.Name name=@Model.Name

               @Html.Raw(Model.Required?$"data-val-required='Поле является обязательным.'":$"")

               @Html.Raw(Model.Placeholder != null?$"placeholder='{Model.Placeholder}'":$"")

               @Html.Raw(Model.LengthMin != null?$"data-val-length-min='{Model.LengthMin}'":$"")
               @Html.Raw(Model.LengthMax != null?$"data-val-length-max='{Model.LengthMax}'":$"")

               @Html.Raw((Model.LengthMax != null || Model.LengthMin != null)?$"data-val-length='Поле {Model.DisplayName} должно быть длиной {((Model.LengthMin != null) ? $"больше {Model.LengthMin}" : "")} {((Model.LengthMax != null) ? $"меньше {Model.LengthMax}" : "")} символов включительно.'":$"")
              
               @Html.Raw((!string.IsNullOrEmpty(Model.RegularExpression))?$"data-val-regex-pattern='{Model.RegularExpression}'":$"")
               @Html.Raw((!string.IsNullOrEmpty(Model.RegularExpression))?$"data-val-regex='Поле должно соотвествовать: {Model.RegularExpression}'":$"")
               value="@Model.GetValue(ViewBag._model)" />
        <span class="col-12 field-validation-valid text-warning span-error-d-none" data-valmsg-for=@Model.Name data-valmsg-replace="true"></span>

    </div>
</div>